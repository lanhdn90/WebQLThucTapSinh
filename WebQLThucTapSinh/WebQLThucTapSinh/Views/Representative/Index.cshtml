
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    WebDatabaseEntities database = new WebDatabaseEntities();
}
@using WebQLThucTapSinh.Models;
@model List<WebQLThucTapSinh.Common.RepresentativeClass>
<a style="margin-top: 12px" href="/Representative/Create" id="them" class="them btn btn-outline btn-primary">Thêm</a>
<div class="text-primary" style="text-align:center"><h2>DANH SÁCH GIÁO VỤ</h2></div>
<div class="dataTable_wrapper">
    <table class="table table-striped table-bordered table-hover" id="table">
        <thead>
            <tr>
                <th>Họ và tên</th>
                <th>Điện thoại</th>
                <th>Email</th>
                <th>Fax</th>
                <th>Trạng Thái</th>
                <th>Hoạt Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.Fax</td>
                    <td>
                        @if (item.Status == true)
                        {<a href="#" class="btn-active2" data-id="@item.PersonID">Kích hoạt </a>}
                        else
                        { <a href="#" class="btn-active2" data-id="@item.PersonID">Khóa </a>}
                    </td>
                    <td>
                        <a href="/Representative/Edit/@item.PersonID" class="btn btn-warning">Sửa</a>||
                        <a data-id="@item.PersonID" data-name="@item.FullName" class="deleteRepresentative btn btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/admin.js"></script>
