@model WebQLThucTapSinh.Models.DropdownOrg

@{
    ViewBag.Title = "IndexOfSchool";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/StyleIntern.css" rel="stylesheet" />
<div class="text-primary" style="text-align:center"><h2>DANH SÁCH THỰC TẬP SINH</h2></div>
<div class="page-header">
    <a href="#tab_1-1" data-toggle="tab" class="btn btn-outline btn-primary">Danh Sách Thực tập sinh</a>
    <a href="#tab_1-2" data-toggle="tab" class="btn btn-outline btn-primary">Danh Sách chưa xác nhận</a>
    <div class="form-dropdown">
        @Html.DropDownListFor(model => model.FacultyId, ViewBag.listOrganization as SelectList, "Chọn Khoa", htmlAttributes: new { @class = "dropdown form-control" })
        @Html.DropDownListFor(model => model.companyId, new SelectList(" "), "Chọn Công ty", htmlAttributes: new { @class = "dropdown form-control" })
    </div>
</div>
<div class="dataTable_wrapper tab-content">
    <div class=" tab-pane active" id="tab_1-1">
        <div class="col-md-12" style="margin-left: 0px !important;">
            <div class="row">
                <br />
                <table class="table table-striped table-bordered table-hover" id="table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Mã số Sinh viên</th>
                            <th>Họ và Tên</th>
                            <th>Ngày Sinh</th>
                            <th>Công ty</th>
                            <th>Khóa học</th>
                            <th>Kết quả</th>
                        </tr>
                    </thead>
                    <tbody id="myTable">
                    </tbody>
                </table>
                <script id="data-template" type="x-tmpl-mustache">
                    <tr>
                        <td class="text-center"><input name="dschon" type="checkbox" value="{{PersonID}}" /> </td>
                        <td><a href="/Intern/CVIntern/{{PersonID}}">{{StudentCode}}</a></td>
                        <td><a href="/Intern/CVIntern/{{PersonID}}">{{FullName}}</a></td>
                        <td>{{ Birthday}}</td>
                        <td>{{Company}}</td>
                        <td>{{InternShip}}</td>
                        <td>{{Result}}</td>
                    </tr>
                </script>
            </div>
        </div>
    </div>

    <div class="tab-pane" id="tab_1-2">
        <br />
        <table class="table table-striped table-bordered table-hover" id="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Mã số Sinh viên</th>
                    <th>Họ và Tên</th>
                    <th>Ngày Sinh</th>
                    <th>Công ty</th>
                    <th>Hoạt động</th>
                </tr>
            </thead>
            <tbody id="myTable1">
            </tbody>
            <script id="data-template1" type="x-tmpl-mustache">
                <tr>
                    <td class="text-center"><input name="dschon" type="checkbox" value="{{PersonID}}" /> </td>
                    <td>{{StudentCode}}</td>
                    <td>{{FullName}}</td>
                    <td>{{Birthday}}</td>
                    <td>{{Company}}</td>
                    <td>
                        <a href="/Intern/Edit/{{PersonID}}" class="btn btn-outline btn-primary">Sửa</a>||
                        <a data-id="{{PersonID}}" data-name="{{FullName}}" class="deleteIntern btn btn-outline btn-primary">Xóa</a>
                    </td>
                </tr>
            </script>
        </table>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/plugins/mustache.min.js"></script>
<script src="~/Scripts/InternJS.js"></script>