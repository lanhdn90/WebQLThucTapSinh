@model WebQLThucTapSinh.Models.DropdownOrg
@{
    ViewBag.Title = "imPortExcel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Pacifico&display=swap" rel="stylesheet">
    <link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
</head>
<body>
    <section>
        <H2 style="color: #007bff!important;">Hướng dẫn  import file excel:</H2>
        <ol>
            <li style="    color: red;display: inline-grid;margin-bottom: 42px;">
                1:Tạo 1 file excel theo form như sau  :
                <img style="width:81%;" src="~/Images/file excel/excel1.png" alt="Alternate Text" />
            </li>
            <li style=" color: red; margin-bottom: 42px; display: inline-grid">
                2 : trỏ để lưu vào ổ D:
                <img style="width:81%" src="~/Images/file excel/excel2.jpg" alt="Alternate Text" />
            </li>
            <li style="color: red;display: inline-grid;margin-bottom: 42px; ">
                3 :trỏ để lưu file vào ổ D:
                <img style="width:81%" src="~/Images/file excel/excel3.jpg" alt="Alternate Text" />
            </li>
        </ol>
    </section>

    <section>
        @using (Html.BeginForm("imPortExcel", "Intern", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.Raw(ViewBag.Error)
            <br />
            <h1 style="color: #007bff!important;">Chọn File Excel: </h1>
            <input type="file" name="excelfile" value="Chọn file" />
            <br />
            <h2 style="color: #007bff!important;">Nhấn submit để chọn  import vào:</h2>
            if (Session["Role"].ToString() == "3")
            {
            <div class="form-dropdown" style="display:flex; width: 250px; margin-left: 20px">
                @Html.DropDownListFor(model => model.companyId, ViewBag.listOrganization as SelectList, "--Select Company--", htmlAttributes: new { @class = "dropdown form-control" })
            </div>
            }
            else
            {
            <div class="form-dropdown" style="display:flex; width: 400px; margin-left: 20px">
                @Html.DropDownListFor(model => model.SchoolId, ViewBag.listOrganization as SelectList, "--Select School--", htmlAttributes: new { @class = "dropdown form-control" })
                @Html.DropDownListFor(model => model.FacultyId, new SelectList(" "), "--Select Faculty--", htmlAttributes: new { @class = "dropdown form-control" })
            </div>
            }
            <br />
            <input type="submit" name="Import" />

        }
    </section>
</body>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/admin.js"></script>
<script src="~/Scripts/HomeControl/InternFunction.js"></script>
