
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    WebDatabaseEntities db = new WebDatabaseEntities();
}

@using WebQLThucTapSinh.Models;
@model List<WebQLThucTapSinh.Models.Organization>
<a href="#"  style="margin-top: 15px"class="btn btn-success">Thêm</a>
<div class="text-primary" style="text-align:center"><h2>DANH SÁCH CÔNG TY</h2></div>
<div class="dataTable_wrapper">
    <table class="table table-striped table-bordered table-hover" id="table">
        <thead>
            <tr>
                <th class="th">Tên công ty</th>
                <th class="th">Địa chỉ</th>
                <th class="th">Điện thoại</th>
                <th class="th">Email</th>
                <th class="th">Ngày bắt đầu</th>
                <th class="th">Trạng thái</th>
                <th class="th">Gia hạn</th>
                <th class="th">Hoạt động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>

                <td>@item.Email</td>
                <td>@Html.FormatValue(@item.StartDay, "{0:dd/MM/yyyy}")</td>
                <td>
                    @if (item.Status == true)
                    {<a href="#" class="btn-active" data-id="@item.ID">Kích hoạt </a>}
                    else
                    { <a href="#" class="btn-active" data-id="@item.ID">Khóa </a>}
                </td>

                <td style="" class="idSort" data-ids="@item.ID">
                    @Html.DropDownList("Gender", (IEnumerable<SelectListItem>)ViewBag.Month, "Chọn tháng", htmlAttributes:
                    new { @class = "gender "})
                </td>
                    <td><a href="#" class="btn btn-warning">Sửa</a>||<a data-id="#" class="xoaSanPham btn btn-danger">Xóa</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

