
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var internShips = (List<WebQLThucTapSinh.Models.InternShip>)ViewBag.IList;
    WebDatabaseEntities database = new WebDatabaseEntities();
}

@using WebQLThucTapSinh.Models;
@model List<WebQLThucTapSinh.Common.LeaderClass>
<div class="page-header">
    <a href="/Leader/Create" id="them" class="them btn btn-outline btn-primary">Thêm</a>
</div>
<div class="dataTable_wrapper tab-content" ">
    <div class=" tab-pane active" id="tab_1-1">
        <div class="col-md-8" style="margin-left: 0px !important;">
            <div class="row">
                <h2 style="width: 100%; margin-left: 0px !important; text-align: center;">Danh sách  Người Hướng dẫn </h2>
                <br />
                <br />
                <table class="table ble">
                    <thead>
                        <tr>
                            <th>Họ và tên</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Trạng Thái</th>
                            <th class="th">Hoạt động</th>
                        </tr>
                    </thead>
                    <tbody id="myTable">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><a href="/Leader/Index/@item.PersonID" class="intership">@item.LastName @item.FirstName</a></td>
                                <td>@item.Phone</td>
                                <td>@item.Email</td>
                                <td>
                                    @if (item.Status == true)
                                    {<a href="#" class="btn-active1" data-id="@item.PersonID">Kích hoạt </a>}
                                    else
                                    { <a href="#" class="btn-active1" data-id="@item.PersonID">Khóa </a>}
                                </td>
                                <td>
                                    <a href="/Leader/Edit/@item.PersonID" class="btn btn-outline btn-primary">Sửa</a> ||
                                    <a href="/Leader/Delete/@item.PersonID" class="btn btn-outline btn-primary">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div>

        </div>
        <div class="col-md-4 ban2">
            <div class="row">
                @{ var name = Session["PersonID"].ToString();
                }
                <h2 style="width: 100%;text-align: center;">Danh sách Khóa học của <br />@database.Person.Find(name).LastName @database.Person.Find(name).FirstName</h2>
                @ViewBag.ERR
                <table class="table ble" style="margin-left: 20px">
                    <thead>
                        <tr>
                            <th>Khóa học</th>
                        </tr>
                    </thead>
                    <tbody id="myTable1">
                        @foreach (var item in internShips)
                        {
                            {
                                <tr>
                                    <td><a href="/Intern/ListIntern/@item.InternshipID">@item.CourseName</a></td>
                                </tr>
                            }
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/admin.js"></script>
